# =============================================================================
# Scribber - Environment Configuration
# =============================================================================
# Copy this file to .env and configure your values
# =============================================================================

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
POSTGRES_USER=appuser
POSTGRES_PASSWORD=devpassword
POSTGRES_DB=app_db

# -----------------------------------------------------------------------------
# Backend
# -----------------------------------------------------------------------------
SECRET_KEY=your_secret_key_use_base64_to_generate try this openssl rand -base64 32
ENVIRONMENT=development
DEBUG=true

# -----------------------------------------------------------------------------
# Redis / Celery
# -----------------------------------------------------------------------------
REDIS_URL=redis://redis:6379/0

# -----------------------------------------------------------------------------
# File Storage
# -----------------------------------------------------------------------------
UPLOAD_DIR=/app/uploads
MAX_UPLOAD_SIZE_MB=500

# -----------------------------------------------------------------------------
# AI APIs - Transcription
# -----------------------------------------------------------------------------
GOOGLE_CLOUD_PROJECT=gcp_project
OPENAI_API_KEY=chatgpt__platform_key
ELEVENLABS_API_KEY=sk_6eedfree_tier is enough

# -----------------------------------------------------------------------------
# AI APIs - Summarization
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=anthropic_claude

# -----------------------------------------------------------------------------
# Export Services (optional)
# -----------------------------------------------------------------------------
SENDGRID_API_KEY=your-sendgrid-api-key
GOOGLE_OAUTH_CLIENT_ID=your-google-oauth-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-google-oauth-client-secret

# -----------------------------------------------------------------------------
# CORS (comma-separated origins)
# -----------------------------------------------------------------------------
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost
