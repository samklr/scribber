# =============================================================================
# Scribber - Environment Configuration
# =============================================================================
# Copy this file to .env and configure your values
# =============================================================================

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
POSTGRES_USER=appuser
POSTGRES_PASSWORD=devpassword
POSTGRES_DB=app_db

# -----------------------------------------------------------------------------
# Backend
# -----------------------------------------------------------------------------
# Security (Backend)
SECRET_KEY=your_secret_key_use_base64_to_generate
RECAPTCHA_SECRET_KEY=your-google-recaptcha-secret-key-v2

# -----------------------------------------------------------------------------
# Frontend
# -----------------------------------------------------------------------------
VITE_API_BASE_URL=/api/v1
# Google reCAPTCHA v2 Site Key (Frontend)
VITE_RECAPTCHA_SITE_KEY=your-google-recaptcha-site-key-v2

ENVIRONMENT=development
DEBUG=true

# -----------------------------------------------------------------------------
# Redis / Celery
# -----------------------------------------------------------------------------
REDIS_URL=redis://redis:6379/0

# -----------------------------------------------------------------------------
# File Storage
# -----------------------------------------------------------------------------
UPLOAD_DIR=/app/uploads
MAX_UPLOAD_SIZE_MB=500

# -----------------------------------------------------------------------------
# AI APIs - Transcription
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-your-openai-api-key
ELEVENLABS_API_KEY=sk-your-elevenlabs-api-key

# -----------------------------------------------------------------------------
# AI APIs - Summarization
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# -----------------------------------------------------------------------------
# Google Cloud / Vertex AI
# -----------------------------------------------------------------------------
# Project ID (required for Vertex AI)
GOOGLE_CLOUD_PROJECT=your-gcp-project-id

# Option 1: Service account file (recommended for development)
# Set the path to your service account JSON file
GOOGLE_CREDENTIALS_FILE=/path/to/your-service-account.json
# This will be mounted to /app/credentials/google-sa.json in the container
GOOGLE_APPLICATION_CREDENTIALS=/app/credentials/google-sa.json

# Option 2: Service account JSON content (for Kubernetes/production)
# Paste the entire JSON content as a single line (escape quotes if needed)
# GOOGLE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"..."}

# Vertex AI location (default: us-central1)
VERTEX_AI_LOCATION=us-central1

# Optional: Google API Key (alternative to service account for some APIs)
# GOOGLE_API_KEY=your-google-api-key

# -----------------------------------------------------------------------------
# Export Services (optional)
# -----------------------------------------------------------------------------
SENDGRID_API_KEY=your-sendgrid-api-key
GOOGLE_OAUTH_CLIENT_ID=your-google-oauth-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-google-oauth-client-secret

# -----------------------------------------------------------------------------
# CORS (comma-separated origins)
# -----------------------------------------------------------------------------
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost
